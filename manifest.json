{
  "manifest_version": 3,
  "name": "StepTwo Gallery Scraper",
  "description": "Professional Web Scraper with bulk download capabilities",
  "version": "0.2.0",
  "author": "STEPTWO Team",
  "minimum_chrome_version": "88",
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker-modern.js"
  },
  "action": {
    "default_title": "STEPTWO V2 - Professional Gallery Scraper",
    "default_popup": "ui/popup.html"
  },
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },
  "options_page": "ui/options.html",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "commands": {
    "start-scraper": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start gallery scraper"
    },
    "toggle-selector": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle selector mode"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open dashboard"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content/injector.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https:; img-src 'self' data: https: blob:;",
    "sandbox": "sandbox allow-scripts; script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "icons/*.svg",
        "ui/popup.html",
        "ui/popup.js",
        "ui/ui-utilities.js",
        "ui/options.js",
        "ui/windowed-dashboard.js",
        "background/background-utilities.js",
        "background/batch-operations-manager.js",
        "background/site-profile-manager.js",
        "background/download-queue.js",
        "background/advanced-export-system.js",
        "background/memory-optimized-processor.js",
        "content/scraper.js",
        "content/picker.js",
        "content/adaptive-selector-system.js",
        "content/infinite-scroll-handler.js",
        "content/perceptual-duplicate-detector.js",
        "content/dynamic-content-observer.js",
        "content/advanced-extractor.js",
        "content/content-utilities.js",
        "content/content-analysis.js",
        "content/macro-system.js",
        "content/injector.js",
        "content/scraper.js",
        "lib/advanced-filter-system.js",
        "lib/lib-utilities.js",
        "lib/jszip.min.js",
        "lib/papaparse.min.js",
        "lib/vue.global.prod.js",
        "lib/xlsx.full.min.js",
        "workers/heavy-operations-worker.js"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}